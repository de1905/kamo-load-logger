# KAMO Load Logger Configuration
# Copy this file to .env and update values

# Required: API key for protected endpoints (generate a random string)
API_KEY=change-me-to-a-secure-random-string

# Timezone (default: America/Chicago)
TZ=America/Chicago

# Port to expose (default: 8080)
PORT=8080

# Polling interval in minutes (default: 5)
# KAMO updates substation data every ~3 minutes
# Use 5, 10, 15, or 30 for aligned timestamps (:00, :05, :10, etc.)
POLL_INTERVAL_MINUTES=5

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Email Notifications (optional - leave blank to disable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=KAMO Logger <your-email@gmail.com>
NOTIFICATION_EMAIL=admin@example.com
